{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "monorepo": true,
  "projects": {
    "@bank/core": {
      "type": "library",
      "root": "../core",
      "entryFile": "main",
      "sourceRoot": "../core",
      "compilerOptions": {
        "tsConfigPath": "../core/tsconfig.json"
      }
    }
  },
  "compilerOptions": {
    "webpack": true,
    "deleteOutDir": true
  }
}
